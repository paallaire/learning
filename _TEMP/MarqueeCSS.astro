---
interface Props {
  direction: string;
  rate: string;
  duplicate: string;
  text: string;
}

const { text } = Astro.props;
---

<div class="marquee-css animate" data-module="marquee-css">
  <div class="marquee-css__inner">
    <div class="marquee-css__item">{text}</div>
    <div class="marquee-css__item">{text}</div>
    <div class="marquee-css__item">{text}</div>
    <div class="marquee-css__item">{text}</div>
  </div>
</div>

<style>
  :root {
    --move-initial: calc(-25%);
    --move-final: calc(-50%);
  }

  .marquee-css {
    position: relative;
    overflow: hidden;
    white-space: nowrap;

    &.animate .marquee-css__inner {
      animation-play-state: running;
    }

    .marquee-css__inner {
      width: fit-content;
      display: flex;
      position: relative;
      transform: translate3d(var(--move-initial), 0, 0);
      animation: marquee-css 5s linear infinite;
      animation-play-state: paused;

      @media (min-width: 1920px) {
        transform: translate3d(calc(-25% + 10vw), 0, 0);
        animation: marquee-css-lg 5s linear infinite;
        animation-play-state: paused;
      }
    }
    .marquee-css__item {
      font-size: 10rem;
    }
  }

  @keyframes marquee-css {
    0% {
      transform: translate3d(var(--move-initial), 0, 0);
    }

    100% {
      transform: translate3d(var(--move-final), 0, 0);
    }
  }

  @keyframes marquee-css-lg {
    0% {
      transform: translate3d(calc(-25% + 10vw), 0, 0);
    }

    100% {
      transform: translate3d(calc(-50% + 10vw), 0, 0);
    }
  }
</style>
