@tailwind base;
@tailwind components;
@tailwind utilities;

.text-marquee {
  position: relative;
  display: flex;
  align-items: center;
  overflow-x: hidden;
}

.text-marquee__line {
  position: relative;
  white-space: nowrap;
  padding: 0;
  margin: 0;
  will-change: transform;
}

.text-marquee__text {
  padding: 0;
  font-size: 6.4rem;
  display: inline-block;
  margin-right: 2rem;
  font-family: arial;
  font-weight: bold;
}
