---
interface Props {
  title: string;
  url: string;
  tags: [];
}

const { title, url, tags } = Astro.props;
---

<li class="col-span-1 divide-y divide-gray-200 rounded-lg bg-white shadow">
  <a href={url} class="flex w-full items-center justify-between space-x-6 p-6">
    <div class="flex-1 truncate">
      <div class="flex items-center space-x-3">
        <h3 class="truncate text-sm font-medium text-gray-900">{title}</h3>
      </div>
      <div class="flex gap-2 py-2">
      {
        tags.map((tag) => (
          <div class="inline-flex flex-shrink-0 items-center rounded-full bg-green-50 px-1.5 py-0.5 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
            {tag}
          </div>
        ))
      }
      </div>
    </div>
  </a>
</li>
